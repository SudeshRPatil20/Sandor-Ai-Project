# Comma-separated Gemini keys (10 keys expected)
GOOGLE_GEMINI_API_KEYS="Enter Your API"

# Example: Gemini HTTP endpoint + model (change to actual)
GEMINI_API_ENDPOINT=https://generativelanguage.googleapis.com/v1/models/text-bison-001:generateText
GEMINI_MODEL=ggemini-flash-latest

# SMTP (for warnings). Use an account you control.
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASS=your_smtp_password_or_app_password
WARNING_TO_EMAIL=ops@example.com

# Optional tuning
REQUEST_TIMEOUT_SECONDS=20
MAX_TOTAL_RETRIES_PER_PROMPT=30
BASE_BACKOFF_SECONDS=1.0

# SQLite file location
SQLITE_DB_PATH=warnings_state.db
